<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ScanView">
        <!--扫描模式，simple 为简单模式 识别速度块 支持的类型少
        many 支持多种类型模式，识别速度慢，支持类型多-->
        <attr name="scanMode" >
            <enum name="simple" value="0"/>
            <enum name="many" value="1"/>
        </attr>

        <attr name="scanType">
            <enum name="scan_full_screen" value="0"/>
            <enum name="scan_box" value="1"/>
        </attr>
        <attr name="cancelText" format="string"/>
        <attr name="cancelTextColor" format="color"/>
        <attr name="cancelTextSize" format="dimension"/>
        <attr name="cancelTop" format="dimension"/>
        <attr name="cancelLeft" format="dimension"/>
        <attr name="pointViewRes" format="reference"/>
        <attr name="pointSize" format="dimension"/>
        <attr name="successRes" format="reference"/>
        <attr name="boxSize" format="dimension"/>
        <attr name="boxRound" format="dimension"/>
        <attr name="mantleColor" format="color"/>
        <attr name="boxStrokeColor" format="color"/>
        <attr name="boxStrokeWidth" format="dimension"/>
        <attr name="lineWidth" format="dimension"/>
        <attr name="lineHeight" format="dimension"/>
        <attr name="lineTop" format="dimension"/>
        <attr name="lineAnimatorDuration" format="integer"/>
        <attr name="hornWidth" format="dimension"/>
        <attr name="hornLength" format="dimension"/>
        <attr name="hornColor" format="color"/>
        <attr name="scanBoxHornType" >
            <enum name="round" value="0"/>
            <enum name="horn" value="1"/>
        </attr>
        <attr name="animatorWidth" format="dimension"/>
        <attr name="animatorHeight" format="dimension"/>
        <attr name="animatorTime" format="integer"/>
        <attr name="lineBitmap" format="reference"/>
        <attr name="trailingBitmap" format="reference"/>
    </declare-styleable>
</resources>